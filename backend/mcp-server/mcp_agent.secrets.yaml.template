# MCP Agent Secrets Template
# Copy this to mcp_agent.secrets.yaml and fill in your actual keys
# mcp_agent.secrets.yaml should be gitignored

# OpenAI Configuration (required for mcp-agent)
openai:
  api_key: ${OPENAI_API_KEY}

# Custom secrets for NYC POI Concierge server
# These will be available as environment variables in the deployed server

mongodb:
  uri: ${MONGODB_URI}

tavily:
  api_key: ${TAVILY_API_KEY}

openweather:
  api_key: ${OPENWEATHER_API_KEY}

perplexity:
  api_key: ${PERPLEXITY_API_KEY}
